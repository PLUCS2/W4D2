<h1>Create your cat!</h1>

<form action="<%= cats_url %>" method="POST">
  <label for="name">Name:</label>
    <input type="text" id="name" name="cat[name]"><br>
  <br><label for="sex">Sex:</label><br>
    <input type="radio" name="cat[sex]" id="sex" value="M" checked>Male<br>
    <input type="radio" name="cat[sex]" id="sex" value="F">Female<br>
  <br><label for="color">Color:</label>
    <select name="cat[color]" id="color">
      <option value="BLANK">Please Select Color</option>
      <option value="BLACK">Black</option>
      <option value="BROWN">Brown</option>
      <option value="ORANGE">Orange</option>
      <option value="WHITE">White</option>      
    </select><br>
  <br><label for="birth_date">Birthday:</label>
    <input type="date" name="cat[birth_date]" id="birth_date" max="<%= Time.now %>"><br>
  <br><label for="description">Description:</label>
    <textarea type="text" name="cat[description]" id="description"> </textarea> <br>
  <br><input type="submit" value="Make Your Cat">
</form>